{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="my-5 h100p">
    <div class="container">
    
        <div class="row">
    
            <div class="col-md-4 ms-auto me-auto col-lg-4 col-xs-12 col-sm-12">
                <h1 class="mb-3 text-center h3 font-weight-normal text-uppercase">Connexion</h1>
                <form method="post">
                    {% include "tools/_flash.html.twig" %}
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                
                    {% if app.user %}
                        <div class="mb-3">
                            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                        </div>
                    {% endif %}
                
                    
                    <div class="mb-3">
                        <label for="inputEmail">Email</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-item form-control" required autofocus>
                    </div>
                    <div class="mb-3">
                        <div class="d-flex">
                            <label class="mb-1" for="inputPassword">Mot de passe</label>
                            <a href="#" class="fs-md text-decoration-none link ms-auto">Mot de passe oublié ?</a>
                        </div>
                        <input type="password" name="password" id="inputPassword" class="form-item form-control" required>
                    </div>
                
                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >
                    <div class="gap-2 d-grid">
                        <button class="btn btn-orange btn-lg" type="submit">Connexion</button>
                    </div>
                </form>
                <div class="mt-3 text-center fs-7">
                    Pas encore de compte ? Créez en un en cliquant <a href="{{ path("app_register") }}">ici</a>.
                </div>
                
            </div>
    
        </div>
    
    </div>
</div>
{% endblock %}
