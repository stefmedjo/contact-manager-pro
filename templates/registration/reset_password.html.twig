{% extends "base.html.twig" %}
{% block title %}Réinitialiser mon mot de passe {% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-4 me-auto ms-auto">
                <h1 class="pb-2 mb-2 text-center border-bottom fs-5">
                    Réinitialiser mon mot de passe
                </h1>
                {% include "tools/_flash.html.twig" %}
                <form action="{{ path('reset_password',{'token' : token }) }}" action="POST">
                    <div class="mb-2">
                        <label for="password_1">Nouveau mot de passe</label>
                        <input required type="password" name="password_1" class="form-control" />
                    </div>
                    <div class="mb-2">
                        <label for="password_2">Confirmer votre mot de passe</label>
                        <input required type="password" name="password_2" class="form-control" />
                    </div>
                    <input type="hidden" value="{{ csrf_token('reset-password') }}" name="token">
                    <div class="gap-2 mb-2 d-grid">
                        <button class="btn btn-primary" type="submit">Réinitialiser mon mot de passe</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}